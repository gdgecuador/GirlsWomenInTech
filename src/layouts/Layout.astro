<style is:global>
	.section-header {
		margin-bottom: 60px;
		position: relative;
		padding-bottom: 20px;
	}

	.section-header::before {
		content: "";
		position: absolute;
		display: block;
		width: 60px;
		height: 5px;
		background: #9741E2;
		bottom: 0;
		left: calc(50% - 25px);
	}

	.section-header h2 {
		font-size: 36px;
		text-transform: uppercase;
		text-align: center;
		font-weight: 700;
		margin-bottom: 10px;
	}

	.section-header p {
		text-align: center;
		padding: 0;
		margin: 0;
		font-size: 18px;
		font-weight: 500;
		color: #9195a2;
	}

	.section-with-bg {
		background-color: #f6f7fd;
	}

	body .btn-primary {
    --bs-btn-color: #fff;
    --bs-btn-bg: #9741E2;
    --bs-btn-border-color: #9741E2;
    --bs-btn-hover-color: #fff;
    --bs-btn-hover-bg: #862bd6;
    --bs-btn-hover-border-color: #a454eb;
    --bs-btn-focus-shadow-rgb: 49, 132, 253;
    --bs-btn-active-color: #fff;
    --bs-btn-active-bg: #a454eb;
    --bs-btn-active-border-color: #b167f1;
    --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
    --bs-btn-disabled-color: #fff;
    --bs-btn-disabled-bg: #9741E2;
    --bs-btn-disabled-border-color: #9741E2;
}

</style>
