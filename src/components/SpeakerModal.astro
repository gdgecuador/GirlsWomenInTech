---
import { getModalId } from '../data';
import type { Speaker } from '../types';

interface Props {
	speaker: Speaker;
}

const { speaker } = Astro.props;

const modalId = getModalId(speaker);
const titleId = `${modalId}-title`;

---

<div class="modal fade" id={modalId} tabindex="-1" role="dialog" aria-labelledby={titleId} aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id={titleId}>{ speaker.name }</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
